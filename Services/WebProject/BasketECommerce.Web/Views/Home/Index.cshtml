@model IEnumerable<ProductModel>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if (item.ImageUrl != null && item.ImageUrl.Count() > 0)
                        {
                            <img src="@item.ImageUrl" class="card-image-top rounded" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                        }
                        else
                        {
                            <img src="/images/image-placeholder-500x600.jpg" class="card-image-top rounded" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                        }
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@item.Name</p>
                            <p class="card-title text-warning text-center">by <b>@item.Description</b> </p>
                        </div>
                        <div class="pl-1 mb-0">
                            <p class="text-dark h5 text-dark text-opacity-75 text-center">
                                List price:
                                <span>@item.Price.ToString("c")</span>
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-controller="Home" asp-action="Details" asp-route-productId="@item.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>