@model OrderHeaderDTO

<form method="post">
    <input asp-for="ShoppingCartId" hidden />
    <input asp-for="TotalPrice" hidden />
    <input asp-for="Discount" hidden />
    <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-secondary mb-2">Order Summary</span>
            </div>
            <div class="col-md-5 col-12">
                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Cart</a>
            </div>
            <br /><br /><br />
            <hr />
            <div class="col-7">
                <div class="row pt-2">
                    <div class="col-12 py-2">
                        <h5 class="text-secondary">Delivery details:</h5>
                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="FirstName" placeholder="first name..." class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger" ></span>
                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="LastName" placeholder="last name..." class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger" ></span>
                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="EmailAddress" placeholder="email..." class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger" ></span>
                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="AddressLine" class="form-control" placeholder="address..." class="form-control" />
                        <span asp-validation-for="AddressLine" class="text-danger" ></span>
                    </div>
                    <div class="col-12 pt-2">
                        <label class="col-form-label">Order will be ready in 30minutes after placing order. If you place order when restaurant is closed it will be ready next day.</label>
                    </div>

                </div>
            </div>
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Product Details
                                </div>

                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />

                        @foreach (var item in Model.OrderDetails)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@item.ProductName</span>
                                </div>

                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.Price.ToString("c")</span>

                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.Quantity</span>
                                </div>
                            </div>
                        }

                        <hr />

                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total :  @Model.TotalPrice.ToString("c") <br />
                                <span class="text-success"> Order Discount :  @Model.Discount</span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">

                            <div class="col-12 ">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}